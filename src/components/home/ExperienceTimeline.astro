const experiences = [
  {
    position: 'Full Stack Engineer',
    company: 'Oreala B.V',
    date: 'Apr 2022',
    stack: 'Laravel, Vue.js, Typescript, REST API, Docker, Figma, DevOps'
  },
  {
    position: 'Software Engineer',
    company: 'Colan InfoTech Pvt Ltd',
    date: 'Jul 2019',
    stack: 'REST API, Laravel, Vue.js, React.js, Adonis.js'
  },
  {
    position: 'Web Developer',
    company: 'Colan InfoTech Pvt Ltd',
    date: 'Jul 2018',
    stack: 'Laravel, REST API, PHP, Javascript'
  },
  {
    position: 'PHP Developer',
    company: 'Expose InfoTech Pvt Ltd',
