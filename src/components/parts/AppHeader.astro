---
import AppLogo from '~/components/parts/AppLogo.astro';
import ThemeToggle from '~/components/parts/ThemeToggle.tsx';
import { SITE } from '~/config.mjs';

const menuLinks = [
  {
    name: 'Home',
    link: '/',
    value: '',
  },
  {
    name: 'Blog',
    link: '/blog/',
    value: 'blog',
  },
  {
    name: 'About',
    link: '/about/',
    value: 'about',
  },
];

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="header">
  <div class="drawer border-b-4 border-accent">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
      <!-- Navbar -->
      <div class="w-full navbar bg-primary">
        <div class="container mx-auto">
          <div class="flex-none lg:hidden">
            <label for="my-drawer-3" class="btn btn-square btn-ghost">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-6 h-6 stroke-current"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"
                ></path></svg
              >
            </label>
          </div>
          <div class="flex-1 justify-end px-2 mx-2 normal-case text-xl">
            <a href="/">
              <span class="hidden">{SITE.title}</span>
              <AppLogo />
            </a>
          </div>
          <div class="flex-none hidden lg:block">
            <ul class="menu menu-horizontal font-bold">
              {
                menuLinks.map((link) => (
                  <li
                    class={
                      currentPath === link.value + (link.value !== '' ? '/' : '')
                        ? 'mx-1 text-xl font-medium rounded hover:rounded hover:bg-neutral bg-neutral border-t-2 border-accent'
                        : 'mx-1 text-xl font-medium'
                    }
                  >
                    <a href={link.link}>{link.name}</a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="flex-none w-8 h-8 mx-3">
            <ThemeToggle client:only="react" />
          </div>
        </div>
      </div>
    </div>
    <div class="drawer-side">
      <label for="my-drawer-3" class="drawer-overlay"></label>
      <ul class="menu p-4 w-80 h-full bg-base-200">
        {
          menuLinks.map((link) => (
            <li>
              <a href={link.link}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</header>
