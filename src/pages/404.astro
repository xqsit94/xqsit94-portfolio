---
import type { MetaSEO } from '~/types';
import Layout from '~/layouts/Default.astro';

const meta: MetaSEO = {
  title: '404 - Page Not Found',
  description: "I'm sorry, but the page you were looking for could not be found.",
  image: '/404-xqsit94.png',
};
---

<Layout meta={meta}>
  <div class="relative flex items-center justify-center h-screen">
    <div class="flex flex-col items-center">
      <h1 class="font-bold text-accent text-9xl">404</h1>

      <h6 class="mb-2 text-2xl font-bold text-center text-gray-800 md:text-3xl">
        <span class="text-red-500">Oops!</span> Page not found
      </h6>

      <p class="mb-8 text-center text-gray-500 md:text-lg">
        I'm sorry, but the page you were looking for could not be found.
      </p>

      <a
        href="/"
        class="px-6 py-2 text-sm font-semibold border-2 border-base-content rounded-md text-base-content hover:bg-base-content hover:text-base-100"
        >Go Home</a
      >
    </div>
  </div>
</Layout>
